<?xml version="1.0" encoding="UTF-8"?>
<configuration scan="true">

  <property name="LOG_PATTERN" value="%d{yyyy-MM-dd HH:mm:ss.SSS} %-5level [%thread] %logger - %msg%n"/>

  <property name="SECURE_LOG_PATH" value="logs/secure.log"/>

  <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>${LOG_PATTERN}</pattern>
    </encoder>
  </appender>

  <appender name="SECURE_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
    <file>${SECURE_LOG_PATH}</file>
    <encoder>
      <pattern>${LOG_PATTERN}</pattern>
    </encoder>

    <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
      <fileNamePattern>logs/secure.%d{yyyy-MM-dd}.%i.log.gz</fileNamePattern>
      <maxFileSize>50MB</maxFileSize>
      <totalSizeCap>2GB</totalSizeCap>
      <maxHistory>30</maxHistory>
    </rollingPolicy>
  </appender>

  <root level="INFO">
    <appender-ref ref="CONSOLE"/>
  </root>

  <logger name="SECURE" level="DEBUG" additivity="false">
    <appender-ref ref="SECURE_FILE"/>
  </logger>

</configuration>
